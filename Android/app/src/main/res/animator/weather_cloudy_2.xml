<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:ordering="sequentially" >

    <objectAnimator
        android:propertyName="rotation"
        android:duration="200"
        android:valueFrom="0"
        android:valueTo="6" />

    <objectAnimator
        android:propertyName="rotation"
        android:duration="450"
        android:valueFrom="10"
        android:valueTo="0" />

    <objectAnimator
        android:propertyName="rotation"
        android:duration="200"
        android:valueFrom="0"
        android:valueTo="3" />

    <objectAnimator
        android:propertyName="rotation"
        android:duration="450"
        android:valueFrom="5"
        android:valueTo="0" />

</set>