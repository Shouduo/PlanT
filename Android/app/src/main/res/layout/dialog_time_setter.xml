<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_time_setter_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_time_setter_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorTextLight"
            android:paddingLeft="@dimen/large_margin"
            android:paddingTop="@dimen/little_margin"
            android:textSize="@dimen/large_title_text_size"
            android:text="From:"/>

        <TimePicker
            android:id="@+id/dialog_time_setter_from_time_picker"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TimePicker
            android:id="@+id/dialog_time_setter_to_time_picker"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/dialog_time_setter_done"
                style="@style/material_button"
                android:text="@string/done"
                android:textColor="@color/colorAccent"
                android:layout_alignParentRight="true"
                tools:ignore="RtlHardcoded" />

            <Button
                android:id="@+id/dialog_time_setter_cancel"
                style="@style/material_button"
                android:text="@string/cancel"
                android:textColor="@color/colorTextDark2nd"
                android:layout_toLeftOf="@id/dialog_time_setter_done"
                tools:ignore="RtlHardcoded" />

        </RelativeLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>