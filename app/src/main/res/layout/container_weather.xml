<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_weather"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/container_weather_touchLayout"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        tools:layout_height="256dp"
        tools:background="@android:color/black">

        <TextView
            android:id="@+id/container_weather_realtime_aqiTxt"
            android:layout_margin="@dimen/normal_margin"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textSize="12dp"
            android:maxLines="1"
            style="@style/large_title_text"
            tools:text="Never Sync"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/container_weather_realtime_tempTxt"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/design_title_text_size"
            style="@style/large_title_text"
            tools:text="N/A"
            tools:ignore="RelativeOverlap,RtlHardcoded" />

        <TextView
            android:id="@+id/container_weather_realtime_weatherTxt"
            android:layout_marginLeft="@dimen/little_margin"
            android:layout_marginBottom="@dimen/normal_margin"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/container_weather_realtime_tempTxt"
            android:layout_toLeftOf="@id/container_weather_realtime_aqiTxt"
            android:maxLines="1"
            style="@style/large_title_text"
            tools:text="days"
            tools:ignore="RelativeOverlap,RtlHardcoded" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        style="@style/material_card">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:src="@drawable/ic_humidity"
                    style="@style/material_icon"
                    tools:ignore="ContentDescription,RtlHardcoded" />

                <TextView
                    style="@style/content_text"
                    android:text="Soil Humidity"
                    android:layout_gravity="center_vertical"
                    tools:ignore="RelativeOverlap,RtlHardcoded,RtlSymmetry" />

            </LinearLayout>

            <com.shouduo.plant.view.widget.trend.TrendView
                android:id="@+id/container_humidity_trendView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/material_card">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:src="@drawable/ic_brightness"
                    style="@style/material_icon"
                    tools:ignore="ContentDescription,RtlHardcoded" />

                <TextView
                    style="@style/content_text"
                    android:text="Environment Brightness"
                    android:layout_gravity="center_vertical"
                    tools:ignore="RelativeOverlap,RtlHardcoded,RtlSymmetry" />

            </LinearLayout>

            <com.shouduo.plant.view.widget.trend.TrendView
                android:id="@+id/container_brightness_trendView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/material_card">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:src="@drawable/ic_temperature"
                    style="@style/material_icon"
                    tools:ignore="ContentDescription,RtlHardcoded" />

                <TextView
                    style="@style/content_text"
                    android:text="Environment Temperature"
                    android:layout_gravity="center_vertical"
                    tools:ignore="RelativeOverlap,RtlHardcoded,RtlSymmetry" />

            </LinearLayout>

            <com.shouduo.plant.view.widget.trend.TrendView
                android:id="@+id/container_temperature_trendView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>