<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_condition_setter_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_margin"
            android:layout_marginBottom="@dimen/little_margin">

            <ImageView
                android:id="@+id/dialog_condition_setter_humidity_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                app:srcCompat="@drawable/ic_humidity"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/little_margin"
                android:textColor="@color/colorTextDark2nd"
                android:textStyle="bold"
                android:textSize="@dimen/title_text_size"
                android:text="Soli Humidity :"
                android:layout_toRightOf="@+id/dialog_condition_setter_humidity_icon"/>

            <TextView
                android:id="@+id/dialog_condition_setter_humidity_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/large_margin"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/title_text_size"
                android:text="0 %"/>

        </RelativeLayout>

        <com.xw.repo.BubbleSeekBar
            android:id="@+id/dialog_condition_setter_humidity_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/large_margin"
            android:layout_marginRight="@dimen/large_margin"
            android:layout_marginBottom="@dimen/large_margin"
            app:bsb_max="100"
            app:bsb_min="0"
            app:bsb_thumb_radius="6dp"
            app:bsb_second_track_size="3dp"
            app:bsb_track_color="@color/colorTextDark2nd"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_margin"
            android:layout_marginBottom="@dimen/little_margin">

            <ImageView
                android:id="@+id/dialog_condition_setter_brightness_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                app:srcCompat="@drawable/ic_brightness"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/little_margin"
                android:textColor="@color/colorTextDark2nd"
                android:textStyle="bold"
                android:textSize="@dimen/title_text_size"
                android:text="Environment Brightness :"
                android:layout_toRightOf="@+id/dialog_condition_setter_brightness_icon"/>

            <TextView
                android:id="@+id/dialog_condition_setter_brightness_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/large_margin"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/title_text_size"
                android:text="0 lux"/>

        </RelativeLayout>

        <com.xw.repo.BubbleSeekBar
            android:id="@+id/dialog_condition_setter_brightness_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/large_margin"
            android:layout_marginRight="@dimen/large_margin"
            android:layout_marginBottom="@dimen/large_margin"
            app:bsb_max="100"
            app:bsb_min="0"
            app:bsb_thumb_radius="6dp"
            app:bsb_second_track_size="3dp"
            app:bsb_track_color="@color/colorTextDark2nd"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_margin"
            android:layout_marginBottom="@dimen/little_margin">

            <ImageView
                android:id="@+id/dialog_condition_setter_temperature_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                app:srcCompat="@drawable/ic_temperature"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/little_margin"
                android:textColor="@color/colorTextDark2nd"
                android:textStyle="bold"
                android:textSize="@dimen/title_text_size"
                android:text="Environment Temperature :"
                android:layout_toRightOf="@+id/dialog_condition_setter_temperature_icon"/>

            <TextView
                android:id="@+id/dialog_condition_setter_temperature_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/large_margin"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/title_text_size"
                android:text="-50 Â°C"/>

        </RelativeLayout>

        <com.xw.repo.BubbleSeekBar
            android:id="@+id/dialog_condition_setter_temperature_seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/large_margin"
            android:layout_marginRight="@dimen/large_margin"
            android:layout_marginBottom="@dimen/large_margin"
            app:bsb_max="50"
            app:bsb_min="-50"
            app:bsb_thumb_radius="6dp"
            app:bsb_second_track_size="3dp"
            app:bsb_track_color="@color/colorTextDark2nd"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_margin">

            <Button
                android:id="@+id/dialog_condition_setter_done"
                style="@style/material_button"
                android:text="@string/done"
                android:textColor="@color/colorAccent"
                android:layout_alignParentRight="true"
                tools:ignore="RtlHardcoded" />

            <Button
                android:id="@+id/dialog_condition_setter_cancel"
                style="@style/material_button"
                android:text="@string/cancel"
                android:textColor="@color/colorTextDark2nd"
                android:layout_toLeftOf="@id/dialog_condition_setter_done"
                tools:ignore="RtlHardcoded" />

        </RelativeLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>