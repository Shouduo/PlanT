<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/container_about_app_appIcon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/material_icon_size"
            android:layout_width="@dimen/flag_icon_size"
            android:layout_height="@dimen/flag_icon_size"
            tools:src="@mipmap/ic_launcher"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/container_about_app_appName"
            android:text="@string/plant"
            android:textColor="@color/colorTextTitle"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/container_about_app_appIcon"
            android:layout_marginTop="@dimen/little_margin"
            style="@style/large_title_text" />

        <TextView
            android:id="@+id/container_about_app_appVersion"
            android:text="v5.2.0"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/container_about_app_appName"
            android:layout_marginTop="@dimen/little_margin"
            style="@style/title_text" />

    </RelativeLayout>
</LinearLayout>